#guide
   display table
   width 100%
   background  #eee 
   padding-top  4px 
   margin-left 20px 
   margin-right 10px 
   -webkit-border-radius  11px 11px 11px 11px 
   -moz-border-radius  11px 11px 11px 11px 
   
.logo
   display table-cell
   width 10%
   img
     width 56px
     height 56px
     margin-left 20px

.guidebar
  display table-cell
  width 70%

.accountDiv
  display table-cell
  width 20%
  position absolute  
  
  a
    display inline-block
    padding  20px 20px 20px 20px 
    background  #3b3a63 
    color #fff 
    -webkit-border-radius  11px 11px 0px 0px 
    -moz-border-radius  11px 11px 0px 0px 
  
  
.searchbar
  width 100%
  padding-top 5px
  padding-bottom 5px
  text-align center
  float left
  display inline-block
  background #191839
  color #fff
  -webkit-border-radius 11px 11px 0px 0px
  -moz-border-radius 11px 11px 0px 0px
  
  div 
    display inline
    float left
    padding 0 20px 0 20px  

  .label
    margin-top 5px

  .searchSelector
    margin-top 3px
    
.breadcrumbs
    width 100%
    display inline-block
    background #46464d url(/images/navbar.jpg) 
    left 0  
    height 15px
    margin 0px
    padding-top 0px
    padding-bottom 5px
    margin-top 0px
    margin-bottom 2px
    font-size 70%
    -webkit-border-radius 0px 0px 0px 5px
    -moz-border-radius 0px 0px 0px 5px
 
    ul 
       display inline    
       margin 0 auto  
       list-style none  
  
       li   
          float left
          padding-left 10px
          margin-top 5px
          
          a
            display inline
            height 30px
            margin-right 20px
            margin-top 5px 
       	    padding-right 15px
       	    text-align center
       	    text-decoration none
       	    color #e6e6e6
       	    & hover
       	      color #555

.subtitle
    color #a6a6a6
    font-style italic
    font-weight bold
    margin-left 100px

    
.searchSelector
    display  inline-block 
    background  #efefef 
    color  #000 
    text-align  center   
    padding-top 8px 
    padding-bottom  5px 
    height  20px 
    margin-right  5px 
    margin-top  2px 
    -webkit-border-radius  5px 5px 5px 5px 
    -moz-border-radius  5px 5px 5px 5px 
    
    span
      display inline-block
      vertical-align text-top


    img
      display inline-block 
      width 20px 
      height 20px 
      margin-right 10px 
      padding-bottom 5px 
      vertical-align  middle 
    
    
 .searchinput
    width 160%