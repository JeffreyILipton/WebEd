html(lang="en")
head
  meta(charset="utf-8")
  title = title
  link(rel="stylesheet", href="/stylesheets/rest.css")
  link(rel="stylesheet", href="/stylesheets/search.css")
  script(src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js")
  script(src="/javascripts/testimage.js")


body
 header
  section#guide
    div.logo
      img(src='/images/SeraphIcon-5-blue.png')
    div.guidebar
      div.searchbar
        form.searchform(method='post')
          div.label Search
          div.searchSelector
            span co-create
            input(type='checkbox',name='create', class='searchOption')
          div.searchSelector 
            span kits
            input(type='checkbox',name='kits', class='searchOption')
          div.searchText
            input(type='text',name='search',id='search',class='searchinput')
          input#go(type='submit', value='go')
      div.breadcrumbs
        ul.crumbs
          li
            div.breadButtons
              a.backbutton back
              a.fowardbutton foward
          li
            a Home
          li
            a Apps
     
    div.accountDiv
      a.accountButton Jeff's Account
      a.cartButton Cart
      
      
 div#content
    aside
      section#sidebar
        header
           h3 Quick Links
        ul
          -each sideItem in sideItems
           li
             a(href='sideItem.link')=sideItem.txt
    div#mainContent
       section#teaser
        div.mainImage
          img.mainImage(src = '/images/apps-main.jpg')
        div.sideImages
          img.sideImage(src ='/images/SeraphIcon-5-blue.png')
          img.sideImage(src ='/images/SeraphIcon-5-blue.png')
          img.sideImage(src ='/images/SeraphIcon-5-blue.png')
                